---
const experiences = [
  {
    company: "Claritas",
    role: "AI Agent Developer",
    dates: "Feb 2025 – Present",
    impact:
      "Built AI coaching agents and backend infrastructure for an AI-driven performance management platform.",
  },
  {
    company: "Postal.io",
    role: "Data Scientist Intern",
    dates: "Dec 2023 – Jul 2024",
    impact:
      "Built predictive LTV models and used clustering on millions of records to identify high-retention segments.",
  },
  {
    company: "Cal Poly",
    role: "Research Analyst",
    dates: "Nov 2023 – Jun 2024",
    impact:
      "Co-developed an interactive statistics textbook with automated feedback. Presented findings at eCOTS.",
  },
];
---

<div class="space-y-8">
  {experiences.map((exp, i) => (
    <div class="group border-l-2 border-slate-700/50 pl-6 hover:border-accent-blue/50 transition-colors duration-300">
      <span class="text-xs uppercase tracking-widest text-gray-500 font-medium">{exp.dates}</span>
      <h3 class="mt-1 text-3xl sm:text-4xl font-extrabold text-white leading-tight tracking-tight">
        {exp.role}
      </h3>
      <span class="text-sm text-accent-blue font-medium">{exp.company}</span>
      <p class="mt-2 text-gray-400 leading-relaxed max-w-2xl">
        {exp.impact}
      </p>
    </div>
  ))}
</div>
