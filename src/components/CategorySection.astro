---
import ProjectCard from './ProjectCard.astro';

interface Project {
  title: string;
  description: string;
  category: string;
  tags: string[];
  repoUrl: string;
  stars?: number;
  forks?: number;
  language?: string;
}

interface Props {
  title: string;
  projects: Project[];
}

const { title, projects } = Astro.props;
---

<section class="mb-16">
  <h2 class="text-2xl font-bold text-white mb-6">{title}</h2>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    {projects.map((project) => (
      <ProjectCard {...project} />
    ))}
  </div>
</section>
