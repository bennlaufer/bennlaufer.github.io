    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {featured.map((project) => (
        <ProjectCard {...project} />
      ))}
    </div>
  </section>

  <!-- Skills -->
  <section class="pb-16 animate-fade-in-up" style="animation-delay: 0.35s">
    <h2 class="text-2xl font-bold text-white mb-6">Skills & Interests</h2>
