---
import BaseLayout from '../layouts/BaseLayout.astro';

const contacts = [
  {
    label: 'Email',
    value: 'bennlaufer@gmail.com',
    href: 'mailto:bennlaufer@gmail.com',
    icon: 'email',
  },
  {
    label: 'LinkedIn',
    value: 'linkedin.com/in/benlaufer1',
    href: 'https://linkedin.com/in/benlaufer1',
    icon: 'linkedin',
    external: true,
  },
  {
    label: 'GitHub',
    value: 'github.com/bennlaufer',
    href: 'https://github.com/bennlaufer',
    icon: 'github',
    external: true,
  },
];
---

<BaseLayout title="Contact â€” Ben Laufer">
  <div class="max-w-2xl animate-fade-in-up" style="animation-delay: 0.1s">
    <h1 class="text-3xl font-bold text-white mb-4">Get in Touch</h1>
    <p class="text-gray-400 mb-8">Feel free to reach out through any of the channels below.</p>
    <div class="space-y-4">
      {contacts.map((c, i) => (
        <a
          href={c.href}
          target={c.external ? '_blank' : undefined}
          rel={c.external ? 'noopener noreferrer' : undefined}
          class="group flex items-center gap-4 rounded-xl border border-slate-700/50 bg-white/5 backdrop-blur-sm p-5 transition-all duration-300 hover:border-accent-blue/50 hover:shadow-lg hover:shadow-accent-blue/10"
        >
          <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-slate-700/50 flex items-center justify-center text-gray-400 group-hover:text-accent-blue transition-colors">
            {c.icon === 'email' && (
              <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            )}
            {c.icon === 'linkedin' && (
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            )}
            {c.icon === 'github' && (
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
              </svg>
            )}
          </div>
          <div>
            <p class="text-white font-medium group-hover:text-accent-blue transition-colors">{c.label}</p>
            <p class="text-sm text-gray-400">{c.value}</p>
          </div>
        </a>
      ))}
    </div>
  </div>
</BaseLayout>
