---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Resume â€” Ben Laufer">
  <section class="max-w-4xl mx-auto px-4 py-16 sm:py-24">
    <!-- Header row: title + download button -->
    <div class="flex flex-col sm:flex-row items-center justify-between gap-6 mb-10">
      <h1 class="text-4xl font-bold text-white">Resume</h1>
      <a
        href="/resume.pdf"
        download
        class="inline-flex items-center gap-2 px-6 py-3 rounded-lg bg-accent-blue hover:bg-accent-blue/80 text-white font-semibold transition-colors shadow-lg shadow-accent-blue/20"
      >
        <svg
          class="w-5 h-5"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M4 16v2a2 2 0 002 2h12a2 2 0 002-2v-2M7 10l5 5m0 0l5-5m-5 5V3"
          />
        </svg>
        Download PDF
      </a>
    </div>

    <!-- Mobile fallback: visible below sm breakpoint -->
    <div class="block sm:hidden mb-8 rounded-lg border border-slate-700/50 bg-slate-800/50 p-6 text-center">
      <p class="text-gray-400 mb-4">
        For the best viewing experience, download the PDF using the button above or view on a larger screen.
      </p>
    </div>

    <!-- Embedded PDF: hidden on very small screens, visible from sm up -->
    <div class="hidden sm:block">
      <iframe
        src="/resume.pdf"
        title="Ben Laufer's Resume"
        class="w-full rounded-lg border border-slate-700/50"
        style="height: 80vh;"
      >
        <p class="text-gray-400">
          Your browser does not support embedded PDFs.
          <a
            href="/resume.pdf"
            download
            class="text-accent-blue hover:underline"
          >
            Download the resume instead.
          </a>
        </p>
      </iframe>
    </div>
  </section>
</BaseLayout>
